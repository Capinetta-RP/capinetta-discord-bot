# ---------------------------------------------------------
# CAPI NETTA RP - ARCHIVO DE EJEMPLO (.env.example)
# Renombra este archivo a ".env" y completa con tus datos reales.
# ---------------------------------------------------------

# === TOKENS DE LOS BOTS ===
GENERAL_TOKEN=TU_TOKEN_BOT_GENERAL_AQUI
WHITELIST_TOKEN=TU_TOKEN_BOT_WHITELIST_AQUI

# === OAUTH2 (Dashboard Web) ===
GENERAL_CLIENT_ID=TU_CLIENT_ID_AQUI
GENERAL_CLIENT_SECRET=TU_CLIENT_SECRET_AQUI
DASHBOARD_CALLBACK_URL=http://localhost:3000/auth/discord/callback
SESSION_SECRET=GENERA_UN_STRING_ALEATORIO_SEGURO_AQUI

# === IDENTIFICACIÓN ===
GENERAL_GUILD_ID=ID_TU_SERVIDOR_PRINCIPAL
WHITELIST_CLIENT_ID=ID_BOT_WHITELIST
WHITELIST_GUILD_ID=ID_TU_SERVIDOR_WHITELIST

# === WHITELIST ===
WHITELIST_STAFF_ROLE_ID=ID_ROL_STAFF_WHITELIST
WHITELIST_CHANNEL_ID=ID_CANAL_RESULTADOS_WHITELIST

# === BASE DE DATOS (MariaDB/MySQL) ===
DATABASE_URL="mysql://USUARIO:PASSWORD@localhost:3306/NOMBRE_BD"

# Opcional: Variables individuales (si no usas DATABASE_URL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=USUARIO
DB_PASS=PASSWORD
DB_NAME=NOMBRE_BD

# === REDIS (Opcional - Caché distribuido) ===
# Si no está disponible, usa caché en memoria automáticamente
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === HTTPS (Producción) ===
HTTPS_ENABLED=false
SSL_KEY_PATH=./certs/key.pem
SSL_CERT_PATH=./certs/cert.pem

# === WEBHOOKS (Discord) ===
# Webhook para notificaciones de alertas del sistema de monitoreo
ALERTS_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# === FIVEM (Servidor de desarrollo) ===
# Base URL del servidor FiveM (info.json / players.json)
FIVEM_BASE_URL=http://desarrollo.capinettarp.com.ar:10000

# === UMBRALES DE ALERTAS (Configurables) ===
# Porcentaje de errores HTTP que dispara alerta (por defecto: 5%)
ALERT_ERROR_RATE=5

# Porcentaje mínimo de hit rate en caché (por defecto: 60%)
ALERT_CACHE_HIT_RATE=60

# Máximo número de queries lentas permitidas (por defecto: 10)
ALERT_SLOW_QUERIES=10

# Porcentaje máximo de uso de memoria (por defecto: 80%)
ALERT_MEMORY_USAGE=85

# Máximo número de rate limits de Discord API (por defecto: 5)
ALERT_DISCORD_RATE_LIMIT=5

# Tiempo máximo promedio de respuesta en ms (por defecto: 1000ms)
ALERT_RESPONSE_TIME=1000

# === CONFIGURACIÓN DE CACHÉ (Opcional) ===
# Tiempo de vida de caché de perfiles de usuario en ms (por defecto: 600000 = 10 minutos)
CACHE_USER_PROFILE_TTL=600000

# Intervalo de actualización de perfiles en ms (por defecto: 900000 = 15 minutos)
CACHE_USER_PROFILE_REFRESH=900000

# Número de perfiles a actualizar por lote (por defecto: 50)
CACHE_USER_PROFILE_BATCH=50

# Tamaño máximo de caché de perfiles (por defecto: 1000)
CACHE_USER_PROFILE_MAX_SIZE=1000

# TTL de caché de estadísticas en ms (por defecto: 300000 = 5 minutos)
CACHE_STATS_TTL=300000

# TTL de métricas de Discord en ms (por defecto: 45000 = 45 segundos)
CACHE_DISCORD_METRICS_TTL=45000

# Intervalo de limpieza de logs en ms (por defecto: 86400000 = 1 día)
LOGS_CLEANUP_INTERVAL=86400000

DB_USER=root
DB_PASSWORD=tu_password_seguro
DB_NAME=capi_netta_rp